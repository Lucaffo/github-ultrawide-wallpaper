{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Project",
            "dependsOn": [
                "Dart Pub Get",
                "Dart Pub Upgrade",
                "Compile WallpaperGeneratorWorker",
                "Compile Main"
            ]
        },
        {
            "label": "Dart Pub Get",
            "type": "shell",
            "command": "dart",
            "args":[
                "pub",
                "get"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dart"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Dart Pub Upgrade",
            "type": "shell",    
            "command": "dart",
            "args":[
                "pub",
                "upgrade"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dart"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Compile WallpaperGeneratorWorker",
            "type": "shell",
            "command": "dart",
            "args": [
                "compile",
                "js",
                "-O1",
                "${workspaceFolder}/dart/web/wallpaper_generator_worker.dart",
                "-o",
                "${workspaceFolder}/dart/web/wallpaper_generator_worker.js"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Compile Main",
            "type": "shell",
            "command": "dart",
            "args": [
                "compile",
                "js",
                "-O1",
                "${workspaceFolder}/dart/web/main.dart",
                "-o",
                "${workspaceFolder}/dart/web/main.js"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label" : "Create Dart Package",
            "type": "shell",
            "command": "dart",
            "args": [
                "create",
                "-t",
                "package-simple",
                "/packages/${input:packageName}"
            ]
        }
    ],
    "inputs": [
        {
            "id": "packageName",
            "description": "PackageName:",
            "default": "my_package",
            "type": "promptString"
        }
    ]
}