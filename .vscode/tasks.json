{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Dart",
            "type": "shell",
            "command": "dart",
            "args":[
                "pub",
                "get"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dart"
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Compile Dart to JS",
            "type": "shell",
            "command": "dart",
            "args": [
                "compile",
                "js",
                "${workspaceFolder}/dart/web/main.dart",
                "-o",
                "${workspaceFolder}/dart/web/main.js"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": "Build Dart"
        }
    ]
}